<h1>Books</h1>

<table>
<tr>
  <th>Title</th>
  <th>body</th>
  <th></th>
</tr>
 <% @books1.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td>
    <%= link_to "Show", book_path(book.id)%>
    <%= link_to "Edit", book_edit_path(book.id) %>
    <%= link_to "Destroy", book_destroy_path(book.id), method: :delete, "data-comfirm" => "本当に削除しますか？" %>
  </td>
</tr>
</table>
<% end %>

<h2>New book</h2>

<%= form_with model: @books, url:'/books', method: :post do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>